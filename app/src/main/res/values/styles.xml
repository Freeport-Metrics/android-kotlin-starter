<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="RootLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:animateLayoutChanges">true</item>
    </style>

    <style name="Button">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Button.Rockets">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toStartOf">@id/btn_next_flights</item>
        <item name="layout_constraintHorizontal_chainStyle">spread</item>
    </style>

    <style name="Button.NextFlights">
        <item name="layout_constraintStart_toEndOf">@id/btn_rockets</item>
        <item name="layout_constraintEnd_toStartOf">@id/btn_events</item>
        <item name="layout_constraintBaseline_toBaselineOf">@id/btn_rockets</item>
    </style>

    <style name="Button.Events">
        <item name="layout_constraintStart_toEndOf">@id/btn_next_flights</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBaseline_toBaselineOf">@id/btn_next_flights</item>
    </style>

    <style name="RecyclerView">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_height">@dimen/dimen_0</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="layout_constraintTop_toBottomOf">@id/btn_rockets</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>


    <style name="Item">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Item.RootLayout">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Item.RootLayout.WithImage">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="Item.RootLayout.NoImage">
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Item.Layout">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="Item.Layout.Info">
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Item.Layout.Image"/>

    <style name="Item.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Item.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
    </style>

</resources>
